#include <stdio.h>
#include <stdlib.h>

// Node structure
struct Node {
    int data;
    struct Node* next;
};

// Create a new node
struct Node* createNode(int data) {
    struct Node* newNode = (struct Node*)malloc(sizeof(struct Node));
    newNode->data = data;
    newNode->next = NULL;
    return newNode;
}

// Function to get length of linked list
int getLength(struct Node* head) {
    int len = 0;
    while (head != NULL) {
        len++;
        head = head->next;
    }
    return len;
}

// Find intersection point
struct Node* getIntersection(struct Node* head1, struct Node* head2) {
    int len1 = getLength(head1);
    int len2 = getLength(head2);
    int diff = abs(len1 - len2);

    // Move longer list's head ahead
    if (len1 > len2) {
        for (int i = 0; i < diff; i++) head1 = head1->next;
    } else {
        for (int i = 0; i < diff; i++) head2 = head2->next;
    }

    // Traverse together until intersection is found
    while (head1 != NULL && head2 != NULL) {
        if (head1 == head2) return head1;
        head1 = head1->next;
        head2 = head2->next;
    }

    return NULL; // No intersection
}

int main() {
    // Creating first linked list: 1 -> 2 -> 3 -> 4 -> 5
    struct Node* head1 = createNode(1);
    head1->next = createNode(2);
    head1->next->next = createNode(3);

    // Creating second linked list: 9 -> 10 -> 4 -> 5
    struct Node* head2 = createNode(9);
    head2->next = createNode(10);

    // Creating intersection at node with value 4
    struct Node* common = createNode(4);
    common->next = createNode(5);

    head1->next->next->next = common; // 1->2->3->4->5
    head2->next->next = common;       // 9->10->4->5

    struct Node* inter = getIntersection(head1, head2);

    if (inter != NULL)
        printf("Intersection point is: %d\n", inter->data);
    else
        printf("No intersection found.\n");

    return 0;
}
